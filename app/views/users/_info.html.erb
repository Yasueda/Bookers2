<div class="col-md-3">
  <% if book.errors.any? %>
    <div class="error-box">
      <h2><%= book.errors.count %> errors prohibited this book from being:</h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>

  <table class="mb-4 table table-hover table-inverse">
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Insroduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>

  <div class="row">
    <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>

  <%= form_with model: book, url: books_path, method: :post do |f| %>
    <div class="field mb-3">
      <%= f.label :title, "Title" %><br />
      <%= f.text_field :title, autofocus: true, value: "", class: 'w-100' %>
    </div>
    <div class="field mb-3">
      <%= f.label :body, "Opinion" %><br />
      <%= f.text_area :body, autofocus: true, value: "", class: 'w-100' %>
    </div>
    <div class="actions">
      <%= f.submit "Create Book", class: 'btn btn-success btn-sm btn-block w-auto' %>
    </div>
  <% end %>
</div>