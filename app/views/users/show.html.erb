<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'info', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="mb-4 table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Tilte</th>
          <th>Opinion</th>
        </tr>
        <% if @user_books.any? %>
          <% @user_books.each do |book| %>
           <tr>
              <td>
                <%= link_to user_path(book.user_id) do %>
                  <%= image_tag book.user.get_profile_image(100, 100) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
           </tr>
          <% end %>
        <% else %>
            <tr>
              <td colspan="3">No Book</td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

