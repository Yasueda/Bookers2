<%= @user.introduction %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table class="mb-4">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>insroduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div class="row">
        <%= link_to edit_user_path(params[:id]), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>

      <%= form_with model: @book, url: books_path, method: :post do |f| %>
        <div class="field mb-3">
          <%= f.label :title, "Title" %><br />
          <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'w-100' %>
        </div>
        <div class="field mb-3">
          <%= f.label :body, "Opinion" %><br />
          <%= f.text_area :name, autofocus: true, autocomplete: "body", class: 'w-100' %>
        </div>
        <div class="actions">
          <%= f.submit "Create Book", class: 'btn btn-success btn-sm btn-block w-auto' %>
        </div>
      <% end %>

    </div>
  </div>
</div>

