<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-5 col-md-8 col-sm-12 px-5 px-sm-0">

      <h2 class="mt-3">User info</h2>

      <% if @user.errors.any? %>
        <div class="error-box">
          <h2><%= @user.errors.count %> errors prohibited this book from being:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
        <div class="field mb-3">
          <%= f.label :name, "Name" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'w-100' %>
        </div>
        <div class="field mb-3">
          <%= f.label :profile_image, "Image" %><br />
          <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>
        </div>
        <div class="field mb-3">
          <%= f.label :introduction, "Introduction" %><br />
          <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: 'w-100' %>
        </div>
        <div class="actions mb-3">
          <%= f.submit "Update User",class: 'btn btn-secondary btn-sm btn-block w-auto' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
