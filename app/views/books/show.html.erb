<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'users/info', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1"> # RightSide
      <h2>Book detail</h2>
      <table class="mb-4 table table-hover table-inverse">
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image(100, 100) %>
            <br>
            <%= link_to @book.user.name, user_path(@book.user_id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'btn btn-sm btn-danger', "data-confirm" => "Are you sure ?" %></td>
        </tr>
      </table>
    </div>

  </div>
</div>

