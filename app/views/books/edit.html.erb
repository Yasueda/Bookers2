<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-5 col-md-8 col-sm-12 px-5 px-sm-0">
      <h2 class="mt-3">Editing Book</h2>

      <% if @book.errors.any? %>
      <div class="error-box">
          <h2><%= @book.errors.count %> errors prohibited this book from being:</h2>
          <ul>
           <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
           <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div class="field mb-3">
          <%= f.label :title, "Title" %><br />
          <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'w-100' %>
        </div>
        <div class="field mb-3">
          <%= f.label :body, "Opinion" %><br />
          <%= f.text_area :body, autofocus: true, autocomplete: "body", class: 'w-100' %>
        </div>
        <div class="actions mb-3">
          <%= f.submit "Update Book",class: 'btn btn-success btn-sm btn-block w-auto' %>
        </div>
      <% end %>

      <%= link_to "Show", book_path(@book.id) %>
      <span> | </span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>


